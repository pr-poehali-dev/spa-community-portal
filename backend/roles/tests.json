{
  "tests": [
    {
      "name": "OPTIONS request (CORS)",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS"
      }
    },
    {
      "name": "Apply for role without auth",
      "method": "POST",
      "path": "/",
      "body": {
        "role_type": "organizer",
        "description": "Хочу организовывать мероприятия"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Apply with invalid role type",
      "method": "POST",
      "path": "/",
      "headers": {
        "X-Authorization": "Bearer test_token"
      },
      "body": {
        "role_type": "invalid_role",
        "description": "Some description that is long enough"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Get my roles without auth",
      "method": "GET",
      "path": "/",
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
