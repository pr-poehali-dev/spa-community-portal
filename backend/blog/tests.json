{
  "tests": [
    {
      "name": "Get all posts (public)",
      "method": "GET",
      "path": "/?action=list",
      "expectedStatus": 200,
      "expectedBody": {
        "posts": "array"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Get single post by ID",
      "method": "GET",
      "path": "/?action=get&post_id=1",
      "expectedStatus": 200,
      "expectedBody": {
        "post": "object"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Get post comments",
      "method": "GET",
      "path": "/?action=comments&post_id=1",
      "expectedStatus": 200,
      "expectedBody": {
        "comments": "array"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Create post without auth (should fail)",
      "method": "POST",
      "path": "/?action=create",
      "body": {
        "title": "Test Post",
        "content": "Test content"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
